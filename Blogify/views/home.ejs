<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Home Page</title>
</head>

<body>
    <%- include("./partials/navbar") %>
        <div class="container mt-3">
            <% blogs.forEach(blog=> { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <img src="<%= blog.coverImageURL %>" alt="image" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= blog.title %>
                            </h5>
                            <a href="/blogs/<%= blog._id %>" class="card-link">Read More</a>
                        </div>
                    </div>
                </div>

                <% }) %>
        </div>

        <%- include("./partials/scripts") %>
</body>

</html>